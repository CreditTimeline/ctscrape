{
  "name": "ctscrape",
  "description": "Browser extension that scrapes credit report data and sends it to ctview",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "zip": "wxt zip",
    "check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pnpm build && vitest run --config e2e/vitest.e2e.config.ts",
    "test:bench": "vitest bench --run",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-build": "node scripts/check-build.mjs",
    "audit:deps": "pnpm audit --audit-level=high",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@grafana/faro-web-sdk": "^2.2.3",
    "@webext-core/messaging": "^1.4.0",
    "pdfjs-dist": "^5.4.624",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@grafana/faro-rollup-plugin": "^0.8.2",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@webext-core/fake-browser": "^1.3.0",
    "@wxt-dev/module-svelte": "^2.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-security": "^3.0.1",
    "happy-dom": "^20.6.1",
    "prettier": "^3.4.0",
    "prettier-plugin-svelte": "^3.3.0",
    "puppeteer": "^24.37.3",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0",
    "wxt": "^0.19.0"
  }
}
